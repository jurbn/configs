warn-temperature = 65
format = <ramp> <label>
label = %temperature-c%
ramp-0 = Ôãã
ramp-1 = Ôãä
ramp-2 = Ôãâ
ramp-3 = Ôãà
ramp-4 = Ôãá
ramp-foreground = ${colors.primary}
ramp-4-foreground = ${colors.alert}


[module/updates-pacman-aurhelper]
type = custom/script
exec = ~/.config/polybar/scripts/updates.sh
interval = 1800

format-prefix = Ôë¶
format-prefix-foreground = ${colors.primary}


[module/spotify]
type = custom/script
